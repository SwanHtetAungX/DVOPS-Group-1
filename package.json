{
  "name": "dvops-group-1",
  "version": "1.0.0",
  "description": "Repository For DVOPS assignment",
  "main": "index.js",
  "nyc": {
    "include": [
      "utils/ExpenseUtil.js",
      "utils/TransactionUtil.js",
      "utils/UserUtil.js",
      "index.js",
      "public/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "html",
      "text-summary"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "mocha": {
    "reporter": "mochawesome"
  },
  "scripts": {
    "test": "nyc mocha 'tests/*.test.js' && npm run check-coverage",
    "check-coverage": "nyc check-coverage",
    "test-report": "nyc mocha --watch tests/*.test.js --reporter mochawesome",
    "commit": "cz",
    "prepare": "husky install",
    "start": "node index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "chai": "^5.1.0",
    "chai-http": "^4.4.0",
    "chromedriver": "^121.0.0",
    "express": "^4.18.2",
    "express-status-monitor": "^1.3.4",
    "fs": "^0.0.1-security",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.17.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.19",
    "commitizen": "^4.3.0",
    "cypress": "^13.6.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "mochawesome": "^7.1.3",
    "nyc": "^15.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./.husky/prepare-commit-msg.ps1"
    }
  }
}